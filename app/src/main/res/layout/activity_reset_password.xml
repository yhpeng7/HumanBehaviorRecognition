<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xupt.mvp.ResetPasswordActivity">

    <ImageView
        android:id="@+id/reset_password_iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/reset_password_et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_bg_et_login"
        android:digits="@string/password_limit"
        android:hint="@string/reset_password_hint_new_password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="86dp"
        android:textColorHint="@color/grey"
        android:textCursorDrawable="@drawable/ic_edit_text_cursor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_et_vc" />

    <EditText
        android:id="@+id/reset_password_et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_bg_et_login"
        android:hint="@string/reset_password_hint_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="56dp"
        android:textColorHint="@color/grey"
        android:textCursorDrawable="@drawable/ic_edit_text_cursor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_password_tv_verify_email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:text="@string/reset_password_hint_verify_email"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/reset_password_et_email"
        app:layout_constraintEnd_toEndOf="@+id/reset_password_et_email"
        app:layout_constraintTop_toTopOf="@+id/reset_password_et_email" />

    <EditText
        android:id="@+id/reset_password_et_vc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:maxLines="1"
        android:background="@drawable/ic_bg_et_login"
        android:hint="@string/reset_password_hint_auth_code"
        android:textCursorDrawable="@drawable/ic_edit_text_cursor"
        android:paddingStart="16dp"
        android:paddingEnd="86dp"
        android:textColorHint="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_password_et_email" />

    <Button
        android:id="@+id/reset_password_btn_reset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_bg_btn_login"
        android:text="@string/reset_password_hint_reset"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_et_password" />
</androidx.constraintlayout.widget.ConstraintLayout>
